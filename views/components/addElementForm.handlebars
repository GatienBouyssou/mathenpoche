<section class="section chapter">
    <div class="row"><h5 class="col s12">Create a new chapter.</h5></div>
    <div class="row"><span class="col s12">The chapter will be inserted above :</span></div>
    <div class="row">
        <div class="col s12">
            <ul class="collection selectionCollection">
                {{#each chapters}}
                    <li id="{{@index}}" class="collection-item truncate">Chapter {{@index}} : {{this.title}}</li>
                {{/each}}
                <li id="" class="collection-item truncate active">Add the chapter at the end of the list.</li>
            </ul>
        </div>
    </div>
    {{> chapterForm}}
</section>

<section class="section lesson">
    <div class="row"><h5 class="col s12">Create a new lesson.</h5></div>
    {{#if chapters}}
        <div class="row"><span class="col s12">Select the chapter owning the lesson. The lesson will be inserted above the lesson selected or in last position by default:</span></div>
        <div class="row">
            <ul class="collapsible selectionCollection">
                {{#each chapters}}
                    <li>
                        <div id="{{this._id}}" class="collapsible-header">Chapter {{@index}} : {{this.title}}<i class="dropDownArrow material-icons">keyboard_arrow_down</i></div>
                        <div class="collapsible-body">
                            <ul class="collection">
                                {{#each this.lessons}}
                                    {{#if this._id}}
                                        <li id="{{this._id}}" class="collection-item">Lesson {{@index}} : {{this.title}}</li>
                                    {{/if}}
                                {{/each}}
                                <li class="collection-item active">Add the lesson at the end of the list</li>
                            </ul>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
        {{> lessonForm}}
    {{else}}
        <span class="errorLabel">You can't add lesson without adding a chapter</span>
    {{/if}}


</section>

<section class="section exercise">
    <div class="row"><h5 class="col s12">Create a new exercise.</h5></div>
    {{#if chapters}}
        <div class="row"><span class="col s12">The exercise will be inserted above (Chapter 1 Lesson 1 are selected by default):</span></div>
        <div class="row">
            <ul class="collapsible selectionCollection">
                {{#each chapters}}
                    <li>
                        <div id="{{this._id}}" class="collapsible-header">Chapter {{@index}} : {{this.title}}<i class="dropDownArrow material-icons">keyboard_arrow_down</i></div>
                        <div class="collapsible-body">
                            <ul class="collection">
                                {{#each this.lessons}}
                                    <li>
                                        <div id="{{this._id}}" class="collapsible-header">Lesson {{@index}} : {{this.title}}<i class="dropDownArrow material-icons">keyboard_arrow_down</i></div>
                                        <div class="collapsible-body">
                                            <ul class="collection">
                                                {{#each this.exercises}}
                                                    <li id="{{this._id}}" class="collection-item"> Exercise {{@index}} : {{this.title}}</li>
                                                {{/each}}
                                                <li class="collection-item active">Add the exercise at the end of the list</li>
                                            </ul>
                                        </div>
                                    </li>
                                {{/each}}
                            </ul>
                        </div>
                    </li>
                {{/each}}
            </ul>

        </div>
        <form class="col s12" method="post" action="admin/3rdLevel.html">
            <div class="row">
                <div class="input-field col s12 m6">
                    <input placeholder="Title" id="exerciseTitle" name="title" type="text" class="validate" required>
                    <label for="exerciseTitle">Lesson title</label>
                </div>
            </div>
            <div class="row">
                <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </form>
    {{else}}
        <span class="errorLabel">You can't add exercises without adding a chapter</span>
    {{/if}}
</section>